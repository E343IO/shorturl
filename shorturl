check () {
    if [ ! "${1//:*}" = http ]; then
        if [ ! "${1//:*}" = https ]; then
            echo -e "\e[31m[!] Invalid URL. Please use http:// or https://.\e[0m \n"
	    echo -e "\e[32m type st or St to run tool again."
	    sleep 1
	    exit 1
        fi
    fi
}
