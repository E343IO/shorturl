#####################
clear
##############################################################
#                 C O L O U R S                              #
##############################################################
orange='\033[0;33m'                                         ##
white="\033[1;37m"                                          ##
grey="\033[0;37m"                                           ##
purple="\033[1;35m"                                         ##
red="\033[1;31m"                                            ##
green="\033[1;32m"                                          ##
yellow="\033[1;33m"                                         ##
purple="\033[0;35m"                                         ##
cyan="\033[0;36m"                                           ##
cyan1="\033[1;36m"                                          ##
sta="\e[5m"                                                 ##
cafe="\033[0;33m"                                           ##
fiuscha="\033[0;35m"                                        ##
sto="\e[25m"                                                ##
blue="\033[1;34m"                                           ##
l_red="\033[1;37;41m"                                       ##
nc="\033[0m"                                                ## 
pink="\e[95m"                                               ##
##############################################################
function os () {
	cat /etc/os-release &> /dev/null 2>&1
	if [ "$?" -eq "0" ]; then
		OS=DEBIAN 
		BIN="/usr/bin"
		#DRK="/usr/share/shorturl"
		sudo wget -qO- https://github.com/tech2gamer/shorturl/raw/main/setup | sudo bash	
	else
		OS=TERMUX
		BIN="${PREFIX}/bin"
		#DRK="${PREFIX}/share/shorturl
                wget -qO- https://github.com/tech2gamer/shorturl/raw/main/setup | bash

       
        fi
}

remst () {
rm -rf $BIN/st St t2g T2g instagram Instagram  
}

function purge_shorturl() {	
       os;printf "${l_red} Do you wish to delete all files ? y/n : ";read ans && [ "$ans" != "${ans#[Yy]}" ];remst
}

usage () {
cat <<EOF
Usage: $(basename $0) 
[OPTIONS] available
-p, --purge       remove shorturl
-u, --update      To update tool
EOF
}

while true; do
        case "$1" in 
              
               -h|--help)			
                    usage       
                    exit 1
                    ;;
              -u|--update)
	           os
		   exit 1
		   ;;
              
	       -p|--purge)
                purge_shorturl
                exit 1
                ;;
           
           -*)			
                  echo "ERROR: unknown option '$1'" 1>&2
                  echo "Usage -p to remove tool " 1>&2
                  exit 1
                  ;;
            
            *)	
                  f=$1
                  break			
                  ;;
	esac
        shift
done

